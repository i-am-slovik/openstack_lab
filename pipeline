pipeline {
    agent any

    environment {
        GITHUB_TOKEN = credentials('github-token')
        SSH_KEY = credentials('ubuntu@test')
        PATH = "/home/ubuntu/.local/bin:${env.PATH}"  // Add Ansible to the PATH
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    sh '''
                    rm -rf ~/openstack_lab
                    git clone https://$GITHUB_TOKEN@github.com/i-am-slovik/openstack_lab.git ~/openstack_lab
                    '''
                }
            }
        }

        stage('Run Ansible Playbooks') {
            steps {
                script {
                    sh '''
                    cd ~/openstack_lab
                    ansible-playbook deploy.ctl.yaml
                    ansible-playbook apply.config.yaml
                    ansible-playbook deploy.workers.yaml
                    ansible-playbook apply.worker_config.yaml
                    ansible-playbook cleanup.yaml
                    '''
                }
            }
        }
    }
}