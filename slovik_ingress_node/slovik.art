server {
    listen 80;
    server_name slovik.art www.slovik.art;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name slovik.art www.slovik.art;

    ssl_certificate /etc/letsencrypt/live/slovik.art/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/slovik.art/privkey.pem;

    root /var/www/slovik.art/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }
}